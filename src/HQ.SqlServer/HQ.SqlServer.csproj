<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SolutionDir)..\build\package.props" />
  <Import Project="$(SolutionDir)..\build\build.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Configurations>Debug;Release;PackageSources;Package</Configurations>
  </PropertyGroup>

  <PropertyGroup>
    <Description>This package contains the full-stack build for HQ.IO for the SQL Server backend.</Description>
    <PackageTags>hq-stack</PackageTags>
    <Version>1.0.11</Version>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)'!='PackageSources'">
    <Content Include="..\Stack\HQ.Connect\src\HQ.Connect.SqlServer\**\*.cs" Exclude="..\Stack\HQ.Connect\src\HQ.Connect.SqlServer\obj\**;..\Stack\HQ.Connect\src\HQ.Connect.SqlServer\bin\**" Link="Connect.SqlServer\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\Stack\HQ.Lingo\src\HQ.Lingo.SqlServer\**\*.cs" Exclude="..\Stack\HQ.Lingo\src\HQ.Lingo.SqlServer\obj\**;..\Stack\HQ.Lingo\src\HQ.Lingo.SqlServer\bin\**" Link="Lingo.SqlServer\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\Stack\HQ.Cohort\src\HQ.Cohort.Stores.Sql.SqlServer\**\*.cs" Exclude="..\Stack\HQ.Cohort\src\HQ.Cohort.Stores.Sql.SqlServer\obj\**;..\Stack\HQ.Cohort\src\HQ.Cohort.Stores.Sql.SqlServer\bin\**" Link="Cohort.Stores.Sql.SqlServer\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="1.50.5" />
    <PackageReference Include="FluentMigrator.Runner" Version="3.1.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HQ\HQ.csproj" />
  </ItemGroup>

  <Target Name="MergeLinkedSource" BeforeTargets="Build">
    <Copy SourceFiles="%(Content.Identity)" DestinationFiles="%(Content.Link)" SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" Condition="'%(Content.Link)' != ''" />
  </Target>

</Project>
