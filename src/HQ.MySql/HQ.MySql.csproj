<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SolutionDir)..\build\package.props" />
  <Import Project="$(SolutionDir)..\build\build.props" />
  <Import Project="$(SolutionDir)..\build\version.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Configurations>Debug;Release;PackageSources;Package</Configurations>
  </PropertyGroup>

  <PropertyGroup>
    <Description>This package contains the full-stack build for HQ.io for the MySQL backend.</Description>
    <PackageTags>hq-stack</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/hq-io/HQ/master/assets/320x320.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/hq-io/HQ/blob/master/LICENSE_FULL.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://docs.hq.io</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hq-io/HQ</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='PackageSources'">
    <Description>This package contains the full-stack sources for HQ.io for the MySQL backend.</Description>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)'!='PackageSources' AND '$(Configuration)'!='Package'">
    <Content Include="..\Stack\HQ.Data.SessionManagement\src\HQ.Data.SessionManagement.MySql\**\*.cs" Exclude="..\Stack\HQ.Data.SessionManagement\src\HQ.Data.SessionManagement.MySql\obj\**;..\Stack\HQ.Data.SessionManagement\src\HQ.Data.SessionManagement.MySql\bin\**" Link="Connect.MySql\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\Stack\HQ.Data.Sql\src\HQ.Data.Sql.MySql\**\*.cs" Exclude="..\Stack\HQ.Data.Sql\src\HQ.Data.Sql.MySql\obj\**;..\Stack\HQ.Data.Sql\src\HQ.Data.Sql.MySql\bin\**" Link="Lingo.MySql\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\Stack\HQ.Extensions.Identity\src\HQ.Extensions.Identity.Stores.Sql.MySql\**\*.cs" Exclude="..\Stack\HQ.Extensions.Identity\src\HQ.Extensions.Identity.Stores.Sql.MySql\obj\**;..\Stack\HQ.Extensions.Identity\src\HQ.Extensions.Identity.Stores.Sql.MySql\bin\**" Link="Cohort.Stores.Sql.MySql\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MySql.Data" Version="8.0.13" />
    <PackageReference Include="Dapper" Version="1.50.5" />
    <PackageReference Include="FluentMigrator.Runner" Version="3.1.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HQ\HQ.csproj" />
  </ItemGroup>

  <Target Name="MergeLinkedSource" BeforeTargets="Build" Condition="'$(Configuration)'!='Package'">
    <Copy SourceFiles="%(Content.Identity)" DestinationFiles="%(Content.Link)" SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" Condition="'%(Content.Link)' != ''" />
  </Target>

</Project>
