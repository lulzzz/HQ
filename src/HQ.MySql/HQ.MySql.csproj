<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SolutionDir)..\build\package.props" />
  <Import Project="$(SolutionDir)..\build\build.props" />
  <Import Project="$(SolutionDir)..\build\version.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Configurations>Debug;Release;PackageSources;Package</Configurations>
  </PropertyGroup>

  <PropertyGroup>
    <Description>This package contains the full-stack build for HQ.io for the MySQL backend.</Description>
    <PackageProjectUrl>https://docs.hq.io</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hq-io/HQ</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='PackageSources'">
    <Description>This package contains the full-stack sources for HQ.io for the MySQL backend.</Description>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)'!='PackageSources' AND '$(Configuration)'!='Package'">
    <Content Include="..\..\..\HQ.Data\src\HQ.Data.SessionManagement\src\HQ.Data.SessionManagement.MySql\**\*.cs" Exclude="..\..\..\HQ.Data\src\HQ.Data.SessionManagement\src\HQ.Data.SessionManagement.MySql\obj\**;..\..\..\HQ.Data\src\HQ.Data.SessionManagement\src\HQ.Data.SessionManagement.MySql\bin\**" Link="HQ.Data.SessionManagement.MySql\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\..\..\HQ.Data\src\HQ.Data.Sql\src\HQ.Data.Sql.MySql\**\*.cs" Exclude="..\..\..\HQ.Data\src\HQ.Data.Sql\src\HQ.Data.Sql.MySql\obj\**;..\..\..\HQ.Data\src\HQ.Data.Sql\src\HQ.Data.Sql.MySql\bin\**" Link="HQ.Data.Sql.MySql\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\..\..\HQ.Platform\src\HQ.Platform.Identity\src\HQ.Platform.Identity.Stores.Sql.MySql\**\*.cs" Exclude="..\..\..\HQ.Platform\src\HQ.Platform.Identity\src\HQ.Platform.Identity.Stores.Sql.MySql\obj\**;..\..\..\HQ.Platform\src\HQ.Platform.Identity\src\HQ.Platform.Identity.Stores.Sql.MySql\bin\**" Link="HQ.Platform.Identity.Stores.Sql.MySql\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MySql.Data" Version="8.0.15" />
    <PackageReference Include="Dapper" Version="1.50.7" />
    <PackageReference Include="FluentMigrator.Runner" Version="3.1.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HQ\HQ.csproj" />
  </ItemGroup>

  <Target Name="MergeLinkedSource" BeforeTargets="Build" Condition="'$(Configuration)'!='Package'">
    <Copy SourceFiles="%(Content.Identity)" DestinationFiles="%(Content.Link)" SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" Condition="'%(Content.Link)' != ''" />
  </Target>

</Project>
