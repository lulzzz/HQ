<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SolutionDir)..\build\package.props" />
  <Import Project="$(SolutionDir)..\build\build.props" />
  <Import Project="$(SolutionDir)..\build\version.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Configurations>Debug;Release;PackageSources;Package</Configurations>
  </PropertyGroup>

  <PropertyGroup>
    <Description>This package contains the full-stack build for HQ.io for the DocumentDb backend.</Description>
    <PackageTags>hq-stack</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/hq-io/HQ/master/assets/320x320.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/hq-io/HQ/blob/master/LICENSE_FULL.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://docs.hq.io</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hq-io/HQ</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='PackageSources'">
    <Description>This package contains the full-stack sources for HQ.io for the DocumentDb backend.</Description>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)'!='PackageSources' AND '$(Configuration)'!='Package'">
    <Content Include="..\Stack\HQ.Data.SessionManagement\src\HQ.Data.SessionManagement.DocumentDb\**\*.cs" Exclude="..\Stack\HQ.Data.SessionManagement\src\HQ.Data.SessionManagement.DocumentDb\obj\**;..\Stack\HQ.Data.SessionManagement\src\HQ.Data.SessionManagement.DocumentDb\bin\**" Link="Connect.DocumentDb\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\Stack\HQ.Data.Sql\src\HQ.Data.Sql.DocumentDb\**\*.cs" Exclude="..\Stack\HQ.Data.Sql\src\HQ.Data.Sql.DocumentDb\obj\**;..\Stack\HQ.Data.Sql\src\HQ.Data.Sql.DocumentDb\bin\**" Link="Lingo.DocumentDb\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\Stack\HQ.Extensions.Identity\src\HQ.Extensions.Identity.Stores.Sql.DocumentDb\**\*.cs" Exclude="..\Stack\HQ.Extensions.Identity\src\HQ.Extensions.Identity.Stores.Sql.DocumentDb\obj\**;..\Stack\HQ.Extensions.Identity\src\HQ.Extensions.Identity.Stores.Sql.DocumentDb\bin\**" Link="Cohort.Stores.Sql.DocumentDb\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DocumentDbProvider" Version="1.0.0-pre4" />
    <PackageReference Include="FastMember" Version="1.4.1" />
    <PackageReference Include="LiteGuard" Version="2.2.0" />
    <PackageReference Include="Microsoft.Azure.DocumentDB.Core" Version="2.1.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HQ\HQ.csproj" />
  </ItemGroup>

  <Target Name="MergeLinkedSource" BeforeTargets="Build" Condition="'$(Configuration)'!='Package'">
    <Copy SourceFiles="%(Content.Identity)" DestinationFiles="%(Content.Link)" SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" Condition="'%(Content.Link)' != ''" />
  </Target>

</Project>
