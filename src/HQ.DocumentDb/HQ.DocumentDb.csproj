<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <Import Project="$(SolutionDir)..\build\package.props" />
  <Import Project="$(SolutionDir)..\build\build.props" />

  <PropertyGroup>
    <Description>This package contains the full-stack build for HQ.IO for the DocumentDb backend.</Description>
    <PackageTags>hq-stack</PackageTags>
    <Version>1.0.10</Version>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)'!='PackageSources'">
    <Content Include="..\Stack\HQ.Connect\src\HQ.Connect.DocumentDb\**\*.cs" Exclude="..\Stack\HQ.Connect\src\HQ.Connect.DocumentDb\obj\**;..\Stack\HQ.Connect\src\HQ.Connect.DocumentDb\bin\**" Link="Connect.DocumentDb\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\Stack\HQ.Lingo\src\HQ.Lingo.DocumentDb\**\*.cs" Exclude="..\Stack\HQ.Lingo\src\HQ.Lingo.DocumentDb\obj\**;..\Stack\HQ.Lingo\src\HQ.Lingo.DocumentDb\bin\**" Link="Lingo.DocumentDb\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\Stack\System.Data.DocumentDb\src\System.Data.DocumentDb\**\*.cs" Exclude="..\Stack\System.Data.DocumentDb\src\System.Data.DocumentDb\obj\**;..\Stack\System.Data.DocumentDb\src\System.Data.DocumentDb\bin\**" Link="System.Data.DocumentDb\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HQ\HQ.csproj" />
  </ItemGroup>

</Project>
