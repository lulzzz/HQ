<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <Description>This package contains the full-stack build for HQ.IO for the SQLite backend.</Description>
    <PackageTags>hq-stack</PackageTags>
    <Version>1.0.10</Version>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)'!='PackageSources'">
    <Content Include="..\Stack\HQ.Connect\src\HQ.Connect.Sqlite\**\*.cs" Exclude="..\Stack\HQ.Connect\src\HQ.Connect.Sqlite\obj\**;..\Stack\HQ.Connect\src\HQ.Connect.Sqlite\bin\**" Link="Connect.Sqlite\%(RecursiveDir)%(Filename)%(Extension)" />
    <Content Include="..\Stack\HQ.Lingo\src\HQ.Lingo.Sqlite\**\*.cs" Exclude="..\Stack\HQ.Lingo\src\HQ.Lingo.Sqlite\obj\**;..\Stack\HQ.Lingo\src\HQ.Lingo.Sqlite\bin\**" Link="Lingo.Sqlite\%(RecursiveDir)%(Filename)%(Extension)" />

  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HQ\HQ.csproj" />
  </ItemGroup>

</Project>
